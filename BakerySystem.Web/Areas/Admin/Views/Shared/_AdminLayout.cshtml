</head>

<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-gradient navbar-dark border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Petiny Bakery</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						@* <li class="nav-item dropdown">
							<div class="dropdown">
								<button class="btn dropdown-toggle" role="button"
										data-bs-toggle="dropdown">
									Categories
								</button>
								<ul class="dropdown-menu mt-3">
									<li>
										<a class="dropdown-item" asp-controller="Product" asp-action="All" asp-route-id="1">Breads</a>
									</li>
									<li>
										<a class="dropdown-item" asp-controller="Product" asp-action="All" asp-route-id="2">Easter Breads</a>
									</li>
									<li>
										<a class="dropdown-item" asp-controller="Product" asp-action="All" asp-route-id="3">Sandwiches</a>
									</li>
									<li>
										<a class="dropdown-item" asp-controller="Product" asp-action="All" asp-route-id="10">Cakes</a>
									</li>
									<li>
										<a class="dropdown-item" asp-controller="Product" asp-action="All" asp-route-id="6">Drinks</a>
									</li> 

								</ul>
							</div>

						</li> *@
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Review" asp-action="All">Reviews</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Hiring" asp-action="WeAreHiring">Join Us</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Contact" asp-action="Contact">Contact Us</a>
						</li>
					</ul>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; Petiny Bakery @ReleaseYear
			@if (DateTime.UtcNow.Year != ReleaseYear)
			{
				@Html.Raw($" - {DateTime.UtcNow.Year}")
				;

			}
		</div>
	</footer>

	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
