@model CategoryDeleteViewModel

@{
	ViewData["Title"] = "Delete Category";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container">
	<div class="row">
		<div class="border p-3 mt-4 col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
			<form method="post" asp-action="Delete">
				<div class="col pb-2">
				</div>
				<div class="border p-3 mt-4 col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
					<label asp-for="Name"></label>
					<input asp-for="Name" class="form-control">
					<span asp-validation-for="Name" class="small text-danger"></span>
				</div>
				<input class="btn btn-outline-primary float-end" type="submit" value="Delete" />
			</form>
		</div>
	</div>
</div>