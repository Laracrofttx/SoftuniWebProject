@model IEnumerable<CategoryViewModel>
@{
	ViewData["Title"] = "Categories";
}
<h2 class="text-center">@ViewData["Title"]</h2>
<hr />
<div class="d-grid gap-2 mb-2">
	<a asp-controller="Category" asp-action="Index" class="btn btn-primary"></a>
</div>

@if (Model.Count() > 0)
{
	<div class="row">
		@foreach (var category in Model)
		{
			<div class="col-sm-6">
				<div class="card ">
					<div class="card-body">
						<h4 class="card-title text-center">@category.Name</h4>
						<p class="card-text"></p>
						<div class="d-grid gap-2">
							<a asp-controller="Category" asp-action="Index" asp-routeid="@category.Id" class="btn btn-warning">Edit</a>
							<form class="mt-2" asp-controller="Category" aspaction="Delete" asp-route-id="@category.Id">
								<div class="d-grid gap-2">
									<input type="submit" value="" class="btn
btn-danger mb-2" />
								</div>
							</form>
						</div>

					</div>
				</div>
			</div>
		}
	</div>
}
else
{
	<p class="text-center">No posts yet!</p>
}