@model ProductForDeleteViewModel

@using static BakerySystem.Web.Infrastructure.Extensions.ClaimsPrincipalExtension;

@{

	ViewData["Title"] = "Delete product";

}


<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

@if (this.User.IsAdmin())
{
	<form method="post" asp-action="Delete">
		<div class="row">
			<div class="col-md-4">
				<img class="card-img-top" src="@Model.ImageUrl" alt="">
			</div>
			<div class="col-md-8">
				<div class="form-group">
					<label asp-for="Name" class="control-label"></label>
					<input asp-for="Name" class="form-control" disabled="disabled" />
				</div>
				<div class="form-group">
					<label asp-for="Price" class="control-label"></label>
					<input asp-for="Price" class="form-control" disabled="disabled" />
				</div>
				<div class="form-group mt-2">
					<input type="submit" value="Delete" class="btn btn-danger" />
				</div>
			</div>
		</div>
	</form>
}
