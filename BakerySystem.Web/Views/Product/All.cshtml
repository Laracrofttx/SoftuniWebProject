<div class="row gy-3">
	@foreach (var product in Model)
	{
		<div class="col-sm-4 col-md-3">
			<div class="card mb-3 h-100">
				<img class="card-img-top" style="background-color: gray; height: 250px; width: 100%;"
					 src="@product.ImageUrl" alt="@product.Name @product.Price$">
				<div class="card-body">
					<h5 class="card-title">@product.Name @product.Price$</h5>
					<p class="card-text">@product.Description</p>
					<a asp-controller="Product" asp-action="All" asp-route-id="@product.Id" class="align-self-end btn btn-primary float-end">Add to Card</a>
				</div>
			</div>

		</div>
	}
</div>


