@using BakerySystem.Data.Models;
@model BakerySystem.Web.ViewModels.ShoppingCart.CartItemViewModel;


@{

	ViewData["Title"] = "Selected products";

	var amountOfProducts = ViewBag.CartItems.Count;


	var product = ViewBag.CartItems;

}


@if (ViewBag.CartItems.Count == null)
{
	<div class="text-center">Your cart is empty</div>
}

<h3 class="display-5 mb-2 text-center">Selected Products</h3>
<p class="mb-5 text-center">
	<i class="text-info font-weight-bold">@amountOfProducts</i> items in your cart
</p>
@foreach (var item in ViewBag.CartItems)
{
	<section class="pt-5 pb-5">
		<div class="container">
			<div class="row w-100">
				<div class="col-lg-12 col-md-12 col-12">
					<table id="shoppingCart" class="table table-condensed table-responsive">
						<thead>
							<tr>
								<th style="width:60%">Product</th>
								<th style="width:12%">Price</th>
								<th style="width:10%">Quantity</th>
								<th style="width:16%"></th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td data-th="Product">
									<div class="row">
										<div class="col-md-3 text-left">
											<img src="@item.Image" alt="" class="img-fluid d-none d-md-block rounded mb-2 shadow ">
										</div>
										<div class="col-md-9 text-left mt-sm-2">
											<h5>@item.Title</h5>
											<p class="font-weight-light"></p>
										</div>
									</div>
								</td>
								<td data-th="Price">@item.Price</td>
								<td data-th="Quantity">
									<input type="number" class="form-control form-control-lg text-center" value="@item.Quantity">
								</td>
								<td class="actions" data-th="">
									<div class="text-right">
										<button class="btn btn-white border-secondary bg-white btn-md mb-2">
											<i class="fas fa-sync"></i>
										</button>
										<button class="btn btn-white border-secondary bg-white btn-md mb-2">
											<i class="fas fa-trash"></i>
										</button>
									</div>
								</td>
							</tr>
							<tr>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</section>
}
@if (product.Count > 0)
{

	<div class="float-right text-right">
		<h4>Subtotal:</h4>
		<h1></h1>
	</div>
	<div class="row mt-4 d-flex align-items-center">
		<div class="col-sm-6 order-md-2 text-right">
			<a href="catalog.html"></a>
			<a asp-controller="Order" asp-action="Checkout" class="btn btn-primary mb-4 btn-lg pl-5 pr-5">Checkout</a>
		</div>
		<div class="col-sm-6 mb-3 mb-m-1 order-md-1 text-md-left">
			<a href="catalog.html">
				<i class="fas fa-arrow-left mr-2"></i>
			</a>
			<a asp-controller="Product" asp-action="All" asp-route-id="@ViewBag.CartItem?.ProductId">Continue Shopping</a>
		</div>
	</div>

}