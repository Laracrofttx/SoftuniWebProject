@model PossitionDeleteViewModel

@using static BakerySystem.Common.GeneralApplicationConstants;

@{
	ViewBag.Title = "Delete Possition";
}

<div class="container">
	<div class="row">
		<h2 class="text-center"></h2>
		<form method="post" asp-action="Delete" asp-route-id="@Model.Id">
			<h2 class="text-center">@ViewBag.Title</h2>
			<div class="container" style="display:inline">
				<div class="row">
					<div class="col-md-4">
						<img class="card-img-top" style="width: 20rem;"
							 src="@Model.ImageUrl" alt="House Image">
					</div>
					<div class="card col-md-8 border-0">
						<p style="font-size:25px;"><u>@Model.JobTitle</u></p>
						<p>Salary: <b>@Model.Salary</b></p>
						<p>Job Description: @Model.JobDescription</p>
						<div class="form-group mt-2">
							<input class="btn btn-danger float-end " type="submit" value="Delete" />
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>