@using BakerySystem.Web.Infrastructure.Extensions;
@model List<ProductIndexViewModel>;


@{

	ViewData["Title"] = "Home Page";

}


<section>
	<div class="container mt-3">
		<div id="carouselExampleCaptions" class="carousel slide">
			<div class="carousel-indicators">
				<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
				<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
				<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
			</div>
			<div aria-label="carousel" class="carousel-inner">
				<div class="carousel-item active">
					<img aria-label="carousel" class="d-block w-100" style="background-color: gray; height: 550px; width: 100%;" src="~/Images/HomePageCarousel/Bread.jpg" alt="" />
				</div>
				<div class="carousel-item">
					<img aria-label="carousel" class="d-block w-100" style="background-color: gray; height: 550px; width: 100%;" src="~/Images/HomePageCarousel/EasterBread.jpg" alt="" />
				</div>
				<div class="carousel-item">
					<img aria-label="carousel" class="d-block w-100" style="background-color: gray; height: 550px; width: 100%;" src="~/Images/HomePageCarousel/sandwich.jpg" alt="" />
				</div>
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>
	</div>
</section>

