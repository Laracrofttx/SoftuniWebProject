@using BakerySystem.Services.Interfaces;
@using BakerySystem.Web.Infrastructure.Extensions;
@model List<ProductIndexViewModel>;

@{

	ViewData["Title"] = "Home Page";

}

@{

	var firstOffer = Model[0];
	var secondOffer = Model[3];
	var thirdOffer = Model[8];
	var forthOffer = Model[10];


}


<div class=container>
	<div id="carouselExampleCaptions" class="carousel slide">
		<div class="carousel-indicators">
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
		</div>
		<div aria-label="carousel" class="carousel-inner">
			<div class="carousel-item active carousel-item">
				<img aria-label="carousel" class="d-block w-100" style="background-color: gray; height: 550px; width: 100%;" src="~/Images/Bread.jpg" alt="" />
				<div class="carousel-caption d-none d-md-block">
					<h3>Classic Breads</h3>
				</div>
			</div>
			<div class="carousel-item">
				<img aria-label="carousel" class="d-block w-100" style="background-color: gray; height: 550px; width: 100%;" src="~/Images/EasterBread.jpg" alt="" />
				<div class="carousel-caption d-none d-md-block">
					<h3>Easter breads</h3>
				</div>
			</div>
			<div class="carousel-item">
				<img aria-label="carousel" class="d-block w-100" style="background-color: gray; height: 550px; width: 100%;" src="~/Images/sandwich.jpg" alt="" />
				<div class="carousel-caption d-none d-md-block">
					<h3>Our Sandwiches</h3>
				</div>
			</div>
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>
</div>

<h3 class="text-xl-center"> Today's offer </h3>




<div class="container">
	<div class="visible">
		<div class="row gy-3">
			<div class="col-sm-4 col-md-3">
				<div class="card mb-3 h-70">
					<img aria-label="product" class="card-img-top" style="background-color: gray; height: 250px; width: 100%;"
						 src="@firstOffer.ImageUrl">
					<div class="card-body">
						<h5 class="card-title text-center">@firstOffer.Name - @firstOffer.Price$</h5>
						<a href="#" class="btn btn-primary float-end">Add</a>
					</div>
				</div>
			</div>
			<div class="col-sm-4 col-md-3">
				<div class="card mb-3 h-70">
					<img aria-label="product" class="card-img-top" style="background-color: gray; height: 250px; width: 100%;"
						 src="@secondOffer.ImageUrl">
					<div class="card-body">
						<h5 class="card-title text-center">@secondOffer.Name - @secondOffer.Price$</h5>
						<a href="#" class="btn btn-primary float-end">Add</a>
					</div>
				</div>
			</div>
			<div class="col-sm-4 col-md-3">
				<div class="card mb-3 h-70">
					<img aria-label="product" class="card-img-top" style="background-color: gray; height: 250px; width: 100%;"
						 src="@thirdOffer.ImageUrl">
					<div class="card-body">
						<h5 class="card-title text-center">@thirdOffer.Name - @thirdOffer.Price$</h5>
						<a href="#" class="btn btn-primary float-end">Add</a>
					</div>
				</div>
			</div>
			<div class="col-sm-4 col-md-3">
				<div class="card mb-3 h-70">
					<img aria-label="product" class="card-img-top" style="background-color: gray; height: 250px; width: 100%;"
						 src="@forthOffer.ImageUrl">
					<div class="card-body">
						<h5 class="card-title text-center">@forthOffer.Name - @forthOffer.Price$</h5>
						<a href="#" class="btn btn-primary float-end">Add</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="mb-5"></div>

<div class="row">
	<div class="col-12 text-center">
		<button class="btn btn-primary" id="statistics_btn">Show Statistics</button>
	</div>
</div>

<div class="mt-4 p-5 bg-light d-none" id="statistics_box">
	<div class="row">
		<h2 class="col-md-6 text-center" id="total_products"></h2>
		<h2 class="col-md-6 text-center" id="total_categories"></h2>
	</div>
</div>


@section Scripts
	{
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
	<script>statistics();</script>
		
}

