@using BakerySystem.Web.ViewModels.DailyOffer;

@model IEnumerable<DailyOfferViewModel>;


@{


	ViewData["Title"] = "Our offers for today";

}


<div class="row gy-3">

	@foreach (var offer in Model)
	{
		<div class="col-sm-4 col-md-3">
			<div class="card mb-3" @* h-100 *@>
				<img class="card-img-top"  style="background-color: gray; height: 250px; width: 100%;"
					 src="@offer.ImageUrl">
				<div class="card-body">
					<h5 class="card-title">@offer.Name - @offer.Price$</h5>
					<form method="post" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@offer.Id">
						<button type="submit" class="btn btn-primary float-end">
							AddToCart
						</button>
					</form>
				
					<a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@offer.Id"
					   class="btn btn-success">Details</a>

				</div>
			</div>
		</div>
	}
</div>
