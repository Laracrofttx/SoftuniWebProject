@using BakerySystem.Web.ViewModels.Order;
@using BakerySystem.Web.ViewModels.ShoppingCart;
@model CheckoutViewModel

@{
	ViewData["Title"] = "Checkout form";
}

<div class="text-center mt-5"><h3>@ViewData["Title"]</h3></div>
<div class="container">
	<div class="row g-5 justify-content-center">
		<div class="col-md-5 col-lg-4 order-md-last">
		</div>
		<div class="col-md-7 col-lg-8">
			<h4 class="mb-3">Billing address</h4>
			<form method="post" class="needs-validation" novalidate>
				<div class="row g-3">
					<div class="col-sm-6">
						<label asp-for="FirstName"></label>
						<input asp-for="FirstName" class="form-control" placeholder="">
						<span asp-validation-for="FirstName" class="small text-danger"></span>
					</div>
					<div class="col-sm-6">
						<label asp-for="LastName"></label>
						<input asp-for="LastName" class="form-control" placeholder="">
						<span asp-validation-for="LastName" class="small text-danger"></span>
					</div>
					<div class="col-12">
						<label asp-for="PhoneNumber"></label>
						<input asp-for="PhoneNumber" class="form-control" placeholder="">
						<span asp-validation-for="PhoneNumber" class="small text-danger"></span>
					</div>
					<div class="col-12">
						<label asp-for="Address"></label>
						<input asp-for="Address" class="form-control" placeholder="">
						<span asp-validation-for="Address" class="small text-danger"></span>
					</div>
				</div>
				<hr class="my-4">
				<div class="form-check">
					<input type="checkbox" class="form-check-input" id="save-info">
					<label class="form-check-label" for="save-info">Save this information for next time</label>
				</div>
				<button class="w-100 btn btn-danger btn-lg" type="submit" value="Submit order">Submit order</button>
			</form>
		</div>
	</div>
</div>